{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@barbershop-app/api/core/domain": ["libs/api/core/domain/index.ts"],
      "@barbershop-app/api/core/infrastructure": ["libs/api/core/infrastructure/index.ts"],

      "@barbershop-app/api/auth/application": ["libs/api/auth/application/index.ts"],
      "@barbershop-app/api/auth/infrastructure": ["libs/api/auth/infrastructure/index.ts"],

      "@barbershop-app/api/barber/application": ["libs/api/barber/application/index.ts"],

      "@barbershop-app/api/service/application": ["libs/api/service/application/index.ts"],

      "@barbershop-app/client/core/application": ["libs/client/core/application/index.ts"],
      "@barbershop-app/client/core/infrastructure": ["libs/client/core/infrastructure/index.ts"],
      "@barbershop-app/client/core/domain": ["libs/client/core/domain/index.ts"],

      "@barbershop-app/client/auth/presentation": ["libs/client/auth/presentation/index.ts"],
      "@barbershop-app/client/auth/application": ["libs/client/auth/application/index.ts"],
      "@barbershop-app/client/auth/domain": ["libs/client/auth/domain/index.ts"],
      "@barbershop-app/client/auth/infrastructure": ["libs/client/auth/infrastructure/index.ts"],

      "@barbershop-app/client/layout/presentation": ["libs/client/layout/presentation/index.ts"],

      "@barbershop-app/shared/ui": ["libs/shared/ui/index.ts"],
      "@barbershop-app/shared/env": ["libs/shared/env/index.ts"],
      "@barbershop-app/shared/types": ["libs/shared/types/index.ts"],
      "@barbershop-app/shared/utils/infrastructure": ["libs/shared/utils/infrastructure/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
