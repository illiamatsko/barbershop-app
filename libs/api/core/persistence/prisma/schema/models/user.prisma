model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  password    String
  firstName   String
  lastName    String
  phoneNumber String   @unique
  role        Role     @default(CUSTOMER)
  createdAt   DateTime @default(now())

  barber   Barber?
  customer Customer?
  manager  Manager?
}

enum Role {
  CUSTOMER
  BARBER
  MANAGER
  SUPER_ADMIN
}
