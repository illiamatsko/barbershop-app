generator client {
  provider = "prisma-client-js"
  output   = "../../../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  firstName   String
  lastName    String
  phoneNumber String   @unique
  password    String
  createdAt   DateTime @default(now())
  role        Role     @default(CLIENT)
}

enum Role {
  CLIENT
  BARBER
  SUPER_ADMIN
  MODERATOR
}
